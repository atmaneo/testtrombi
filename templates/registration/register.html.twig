{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row">
			<div class="col">
				<h1>Inscription</h1>

				{{ form_start(registrationForm) }}
				<fieldset class="mb-4">
					<legend>Mon identité</legend>
					{{ form_row(registrationForm.lastname) }}
					{{ form_row(registrationForm.firstname) }}
					{{ form_row(registrationForm.email) }}
				</fieldset>

				<fieldset class="mb-4">
					<legend>Mes coordonnées</legend>
					{{ form_row(registrationForm.phone) }}
					{{ form_row(registrationForm.photo) }}
					{{ form_row(registrationForm.formation) }}


				</fieldset>


				{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
				{{ form_row(registrationForm.rgpdconsent) }}

				<button type="submit" class="btn btn-primary btn-lg my-4">M'inscrire</button>
				<a href="{{path('app_login') }}" class="btn btn-secondary">Me connecter</a>

				{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>
{% endblock %}
